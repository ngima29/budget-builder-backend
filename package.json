{
  "name": "budget-builder-backend",
  "version": "1.0.0",
  "description": "budget builder backend api",
  "main": "server.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "build:watch": "tsc --watch",
    "start:watch": "nodemon dist/server.js",
    "start:dev": "nodemon ./src/server.ts",
    "clean": "rm -rf ./dist",
    "migrate": "ts-node node_modules/.bin/sequelize db:migrate --config=src/config/database.js"
  },
  "keywords": [
    "budget builder",
    "api",
    "backend"
  ],
  "author": "Ngima Sherpa",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "joi": "^17.7.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.8.0",
    "sequelize": "^6.26.0",
    "sequelize-cli": "^6.5.2",
    "slug": "^8.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/register": "^7.18.9",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.11",
    "@types/sequelize": "^4.28.14",
    "@types/slug": "^5.0.3",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
